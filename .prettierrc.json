{
  "cssDeclarationSorterOrder": "alphabetical",
  "objectWrap": "collapse",
  "overrides": [
    {
      "files": ["*.sql"],
      "options": {
        "dataTypeCase": "lower",
        "expressionWidth": 10,
        "functionCase": "lower",
        "identifierCase": "lower",
        "keywordCase": "lower",
        "language": "postgresql"
      }
    }
  ],
  "plugins": [
    "prettier-plugin-css-order",
    "prettier-plugin-organize-imports",
    "prettier-plugin-sql"
  ],
  "singleAttributePerLine": true,
  "singleQuote": true
}
